{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "jest": true
    },
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            2,
            "never"
        ],
        "max-len": [
            2,
            520,
            2
        ]
    }
}